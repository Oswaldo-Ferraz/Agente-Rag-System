# Configurações do Banco de Dados
# URL completa de conexão com PostgreSQL
DATABASE_URL=postgresql://chat_user@localhost:5432/chat_system_dev

# Configurações individuais do banco (alternativa à DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chat_system_dev
DB_USER=chat_user
DB_PASSWORD=

# Configurações da API
# Prefixo para as rotas da API versão 1
API_V1_PREFIX=/api/v1

# Nome do projeto (aparece na documentação)
PROJECT_NAME=Chat System

# Modo debug (True para desenvolvimento, False para produção)
DEBUG=True

# Configurações de Embeddings
# Modelo principal: 'huggingface', 'openai', ou 'mock'
EMBEDDING_MODEL=huggingface

# Modelo de fallback caso o principal falhe
EMBEDDING_FALLBACK=openai

# Dimensão dos embeddings (1536 é padrão para OpenAI)
EMBEDDING_DIMENSION=1536

# Modelo HuggingFace específico
HUGGINGFACE_MODEL_NAME=neuralmind/bert-base-portuguese-cased

# OpenAI API Key (para fallback)
OPENAI_API_KEY=your-openai-api-key-here

# Configurações de Logging
# Nível de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Configurações de Segurança (para futuras implementações)
# SECRET_KEY=your-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações de Rate Limiting (para futuras implementações)
# RATE_LIMIT_PER_MINUTE=60

# Configurações de CORS (para produção)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Configurações de Integração Externa
# OpenAI API Key (já configurada acima)
# HUGGINGFACE_API_TOKEN=your-huggingface-token (opcional - apenas para modelos privados)
